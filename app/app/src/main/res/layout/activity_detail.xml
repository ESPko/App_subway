<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!-- 출발역, 도착역 표시 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#141827"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_detail_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:background="#141827"
            android:contentDescription="뒤로가기"
            android:src="@drawable/baseline_arrow_back_ios_24" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="출발"
                android:textColor="#03A9F4"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_detail_start1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#141827"
                android:text="역이름1"
                android:textSize="23sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_detail_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_gravity="center"
            android:layout_marginHorizontal="3dp"
            android:background="#141827"
            android:contentDescription="위치변경"
            android:src="@drawable/baseline_swap_horiz_24" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="도착"
                android:textColor="#03A9F4"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_detail_arrival1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#141827"
                android:text="역이름2"
                android:textSize="23sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_detail_hotlist"
            android:layout_width="54dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:background="#141827"
            android:contentDescription="즐겨찾기"
            android:src="@drawable/baseline_star_rate_24" />
    </LinearLayout>


    <!-- 평일/ 시간/ 출발시간/ 최소시간 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#D3D3D3"
        android:gravity="center">
        <!-- 평일, 토요일, 공휴일 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_op1"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/detail_opt1"
            android:drawableEnd="@drawable/baseline_arrow_drop_down_18"
            android:text="평일"
            android:textSize="15sp" />

        <!-- 시간 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_op2"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/detail_opt1"
            android:drawableEnd="@drawable/baseline_arrow_drop_down_18"
            android:text="시간"
            android:textSize="15sp" />


        <!-- 출발시간/ 도착시간 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_op3"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/detail_opt1"
            android:drawableEnd="@drawable/baseline_arrow_drop_down_18"
            android:text="출발시간"
            android:textSize="15sp" />


        <!-- 최소시간/ 최소환승 -->
        <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/detail_opt1"
            android:id="@+id/btn_op4"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:drawableEnd="@drawable/baseline_arrow_drop_down_18"
            android:text="최소시간"
            android:textSize="15sp" />

    </LinearLayout>


    <!-- 정보 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="#D3D3D3"
        android:gravity="center"
        android:orientation="horizontal">
        <!-- 평일, 토요일, 공휴일 설정을 위한 프래그먼트를 뛰울 컨테이너 -->
        <FrameLayout
            android:id="@+id/detail_fragment1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_op1"
            android:backgroundTint="@color/white" />
        <!-- 시간 설정을 위한 프래그먼트를 띄울 컨테이너 -->
        <FrameLayout
            android:id="@+id/timePickerContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <!-- 출발역, 종착역, 호선, 도착역 정보 (처음에는 보임) -->
        <LinearLayout
            android:id="@+id/detail_info_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="종착역" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_detail_start2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/detail_btn1"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="역이름"
                    android:textSize="16sp" />

                <!-- 호선별로 색깔 변경될 수 있도록 해야함 -->
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="-15dp"
                    android:layout_marginRight="-15dp"
                    android:background="#1A8032"
                    android:gravity="center"
                    android:text="호선"
                    android:textColor="@color/white" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_detail_arrival2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginHorizontal="10dp"
                    android:textColor="@color/black"
                    android:background="@drawable/detail_btn1"
                    android:gravity="center"
                    android:text="역이름"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textSize="16sp" />

                <View
                    android:layout_width="100dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:background="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textSize="16sp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <!-- 소요시간 / 이전,다음열차 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="몇분소요"
                android:textColor="#1F88DB" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginHorizontal="15dp"
                android:text="*"
                android:textColor="#1F88DB" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="몇개 역 경유"
                android:textColor="#1F88DB" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginHorizontal="15dp"
                android:text="*"
                android:textColor="#1F88DB" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="카드 1600원"
                android:textColor="#1F88DB" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:src="@drawable/baseline_detail_circle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/detail_opt2"
                android:drawableStart="@drawable/baseline_arrow_left_24"
                android:id="@+id/btn_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:text="이전열차" />

            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/detail_opt2"
                android:id="@+id/btn_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="3dp"
                android:layout_weight="1"

                android:text="경유보기" />

            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/detail_opt2"
                android:id="@+id/btn_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:text="하차알람" />

            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/detail_opt2"
                android:drawableEnd="@drawable/baseline_arrow_right_24"
                android:id="@+id/btn_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:text="다음열차" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
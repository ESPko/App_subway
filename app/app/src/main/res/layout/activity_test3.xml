<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".min.SearchTestActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/toolbar_layout"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="4dp"
            app:singleSelection="false"
            app:chipSpacingHorizontal="4dp"
            app:chipSpacingVertical="4dp"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toBottomOf="@id/toolbar">


            <com.google.android.material.chip.Chip
                android:id="@+id/chip_subway"
                style="@style/Widget.MaterialComponents.Chip.Filter"

                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:text="지하철"
                app:iconStartPadding="8dp"
                app:chipStartPadding="12dp"
                app:chipEndPadding="12dp"
                app:checkedIconVisible="false" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_bus"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:text="버스"
                app:iconStartPadding="8dp"
                app:chipStartPadding="12dp"
                app:chipEndPadding="12dp"
                app:checkedIconVisible="false" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_bike"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:text="자전거"
                app:iconStartPadding="8dp"
                app:chipStartPadding="12dp"
                app:chipEndPadding="12dp"
                app:checkedIconVisible="false" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_kickboard"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:text="킥보드"
                app:iconStartPadding="8dp"
                app:chipStartPadding="12dp"
                app:chipEndPadding="12dp"
                app:checkedIconVisible="false" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_shelter"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:text="대피소"
                app:iconStartPadding="8dp"
                app:chipStartPadding="12dp"
                app:chipEndPadding="12dp"
                app:checkedIconVisible="false" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_toilet"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:text="화장실"
                app:iconStartPadding="8dp"
                app:chipStartPadding="12dp"
                app:chipEndPadding="12dp"
                app:checkedIconVisible="false" />

        </com.google.android.material.chip.ChipGroup>


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/naver_map"
        android:name="com.naver.maps.map.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

    </androidx.fragment.app.FragmentContainerView>

</LinearLayout>





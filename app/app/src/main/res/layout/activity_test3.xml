<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".min.SearchTestActivity">

    <!-- 지도 (네이버 맵) -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/naver_map"
        android:name="com.naver.maps.map.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- 툴바 오버레이 -->
    <include
        layout="@layout/toolbar_layout"
        android:id="@+id/toolbar_controller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="10dp"
        android:alpha="0.95" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/toolbar_controller"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    <!-- ChipGroup (툴바 아래, 지도 위에 오버레이) -->
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chip_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="4dp"
        app:singleSelection="false"
        app:chipSpacingHorizontal="4dp"
        app:chipSpacingVertical="4dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_controller"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="8dp"
        android:paddingHorizontal="12dp"
        android:paddingVertical="6dp"
        android:alpha="0.9">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_subway"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지하철"
            app:chipStartPadding="12dp"
            app:chipEndPadding="12dp"
            app:checkedIconVisible="false" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_bus"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="버스"
            app:chipStartPadding="12dp"
            app:chipEndPadding="12dp"
            app:checkedIconVisible="false" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_bike"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="자전거"
            app:chipStartPadding="12dp"
            app:chipEndPadding="12dp"
            app:checkedIconVisible="false" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_kickboard"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="킥보드"
            app:chipStartPadding="12dp"
            app:chipEndPadding="12dp"
            app:checkedIconVisible="false" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_shelter"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="대피소"
            app:chipStartPadding="12dp"
            app:chipEndPadding="12dp"
            app:checkedIconVisible="false" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_toilet"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="화장실"
            app:chipStartPadding="12dp"
            app:chipEndPadding="12dp"
            app:checkedIconVisible="false" />



    </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/persistent_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="16dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:behavior_peekHeight="300dp"
        app:behavior_fitToContents="false"
        app:behavior_expandedOffset="300dp"
        android:background="@color/white"
        app:behavior_hideable="false">

        <View
            android:id="@+id/view2"
            android:layout_width="40dp"
            android:layout_height="6dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

<!--        역 이름 -->
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:gravity="center"
            android:text="역이름"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view2" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="2dp"
            android:text="지하철역"
            app:layout_constraintBottom_toBottomOf="@+id/textView4"
            app:layout_constraintStart_toEndOf="@+id/textView4" />

<!--        거리 -->
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="거리(m or km)"
            android:textColor="#434343"
            android:textStyle="bold"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

<!--            내 위치에서 -->
        <TextView
            android:id="@+id/textView_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내 위치에서 선택한 장소까지의 거리"
            android:textColor="#727272"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@id/textView5"
            app:layout_constraintTop_toBottomOf="@id/textView5" />

<!--         전화번호 -->
        <TextView
            android:id="@+id/textView_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="051-1234-5678"
            android:textColor="#727272"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@id/textView_location"
            app:layout_constraintTop_toBottomOf="@id/textView_location" />


<!--        도보 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/appCompatButton4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/shape_for_circle_button"
            app:layout_constraintTop_toTopOf="@+id/textView4"
            android:text="도보" />

<!--        역 정보, 출구 정보, 주변 버스 , 시간표 -->
        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:background="#d3d3d3"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_number"/>

<!--        역 정보 -->
        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:gravity="center"
            android:text="역 정보"
            android:textColor="@color/black"

            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view3" />

<!--        출구 정보 -->
        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:text="출구 정보"
            app:layout_constraintBottom_toBottomOf="@+id/textView12"
            app:layout_constraintStart_toEndOf="@+id/textView12" />

<!--        주변 버스-->
        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:text="주변 버스"
            app:layout_constraintBottom_toBottomOf="@+id/textView13"
            app:layout_constraintStart_toEndOf="@+id/textView13" />

<!--        시간표 -->
        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:text="시간표"
            app:layout_constraintBottom_toBottomOf="@+id/textView14"
            app:layout_constraintStart_toEndOf="@+id/textView14" />


<!--        출발, 경유 , 도착 -->
        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="#d3d3d3"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView12"/>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/appCompatButton2"
            android:layout_width="72dp"
            android:layout_height="36dp"
            android:layout_marginEnd="8dp"
            android:text="출발"
            android:textColor="#0385FF"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/appCompatButton"
            app:layout_constraintEnd_toStartOf="@id/appCompatButton3"
            app:layout_constraintTop_toTopOf="@id/appCompatButton" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/appCompatButton3"
            android:layout_width="72dp"
            android:layout_height="36dp"
            android:layout_marginEnd="8dp"
            android:text="경유"
            android:textColor="#FFA500"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/appCompatButton"
            app:layout_constraintEnd_toStartOf="@id/appCompatButton"
            app:layout_constraintTop_toTopOf="@id/appCompatButton" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/appCompatButton"
            android:layout_width="72dp"
            android:layout_height="36dp"
            android:layout_margin="12dp"
            android:text="도착"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@id/view4"
            app:layout_constraintTop_toBottomOf="@id/view4" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!--        android:background="?attr/colorPrimary"-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="24dp"
            android:id="@+id/search"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_search_24"
                android:contentDescription="역검색"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="역검색"
                android:textSize="12sp"
                android:textColor="@android:color/white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="24dp"
            android:id="@+id/quick_search"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_manage_search_white_24"
                android:contentDescription="빠른검색"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="빠른검색"
                android:textSize="12sp"
                android:textColor="@android:color/white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="24dp"
            android:id="@+id/around"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_place_24"
                android:contentDescription="내주변"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내주변"
                android:textSize="12sp"
                android:textColor="@android:color/white"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="24dp"
            android:id="@+id/setting"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_settings_24"
                android:contentDescription="설정"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="설정"
                android:textSize="12sp"
                android:textColor="@android:color/white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="24dp"
            android:id="@+id/more"
            android:orientation="vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_more_vert_white_24"
            android:contentDescription="더보기"/>

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_detail"
        android:text="detail 액티비티로 이동"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="8dp"
        android:backgroundTint="@color/black" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_naver"
        android:text="네이버맵 액티비티로 이동"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="8dp"
        android:backgroundTint="@color/black" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_get1"
        android:text="GET 방식 통신 1"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="8dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_get2"
        android:text="GET 방식 통신 2"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="8dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_get3"
        android:text="GET 방식 통신 3"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="8dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_post1"
        android:text="POST 방식 통신 1"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="8dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_post2"
        android:text="POST 방식 통신 2"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="8dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_put1"
        android:text="PUT 방식 통신 1"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="8dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_put2"
        android:text="PUT 방식 통신 2"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="8dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_delete"
        android:text="DELETE 방식 통신 1"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="8dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_get5"
        android:text="get 방식 테스트"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="8dp"/>

</LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
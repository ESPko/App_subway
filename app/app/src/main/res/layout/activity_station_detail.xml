<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/toolbar_layout" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--        역 이름 호선 띠-->

        <GridLayout
            android:id="@+id/line_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/lineColor_1"
            android:columnCount="5">

            <TextView
                android:id="@+id/tv_left_lt"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_rowSpan="1"
                android:layout_columnWeight="0"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:text="&lt;"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/tv_left"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowSpan="1"
                android:layout_columnWeight="1"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="다대포해수욕장"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowSpan="1"
                android:layout_columnWeight="1"
                android:layout_gravity="center_vertical"
                android:layout_margin="8dp"
                android:background="@drawable/btn_station_name"
                android:gravity="center"
                android:text="서면역"
                android:textColor="@color/lineColor_1" />

            <TextView
                android:id="@+id/tv_right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowSpan="1"
                android:layout_columnWeight="1"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="부산역"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_right_gt"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_rowSpan="1"
                android:layout_columnWeight="0"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="6dp"
                android:text="&gt;"
                android:textColor="#FFFFFF" />
        </GridLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:columnCount="3"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_rowSpan="1"
                        android:layout_columnWeight="1"
                        android:layout_marginTop="6dp"
                        android:orientation="vertical">
                        <!--                회색 큰 제목 -->
                        <TextView
                            android:id="@+id/down_title_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:gravity="start"
                            android:text="다대포해수욕장"
                            android:textColor="#808080" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/down_title_text1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:text="다대포해수욕장" />

                            <TextView
                                android:id="@+id/down_time_text1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:gravity="start"
                                android:text="1분 후"
                                android:textColor="#59b9ea" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/down_title_text2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:text="다대포해수욕장" />

                            <TextView
                                android:id="@+id/down_time_text2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:gravity="start"
                                android:text="5분 후"
                                android:textColor="#59b9ea" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/down_title_text3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:text="다대포해수욕장" />

                            <TextView
                                android:id="@+id/down_time_text3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:gravity="start"
                                android:text="9분 후"
                                android:textColor="#59b9ea" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="120dp"
                        android:layout_rowSpan="1"
                        android:layout_columnWeight="0"
                        android:layout_margin="10dp"
                        android:background="#e2e2e2" />

                    <!--            오른쪽 데이터  -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_rowSpan="1"
                        android:layout_columnWeight="1"
                        android:layout_marginTop="6dp"
                        android:orientation="vertical">
                        <!--                회색 큰 제목 -->
                        <TextView
                            android:id="@+id/up_title_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:gravity="start"
                            android:text="노포"
                            android:textColor="#808080" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/up_title_text1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:text="노포" />

                            <TextView
                                android:id="@+id/up_time_text1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:gravity="start"
                                android:text="4분 후"
                                android:textColor="#59b9ea" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/up_title_text2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:text="노포" />

                            <TextView
                                android:id="@+id/up_time_text2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:gravity="start"
                                android:text="5분 후"
                                android:textColor="#59b9ea" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/up_title_text3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:text="노포" />

                            <TextView
                                android:id="@+id/up_time_text3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:gravity="start"
                                android:text="9분 후"
                                android:textColor="#59b9ea" />
                        </LinearLayout>
                    </LinearLayout>
                </GridLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="#e2e2e2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="시설 정보"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:columnCount="2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_door"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_rowSpan="1"
                        android:layout_columnWeight="1"
                        android:gravity="center"
                        android:text="내리는문 오른쪽" />

                    <TextView
                        android:id="@+id/tv_toilet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_rowSpan="1"
                        android:layout_columnWeight="1"
                        android:gravity="center"
                        android:text="화장실 외부" />

                    <TextView
                        android:id="@+id/tv_across"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_rowSpan="1"
                        android:layout_columnWeight="1"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="횡단 불가능" />

                    <TextView
                        android:id="@+id/tv_flatform"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_rowSpan="1"
                        android:layout_columnWeight="1"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="플랫폼 양쪽" />

                    <TextView
                        android:id="@+id/tv_storage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_rowSpan="1"
                        android:layout_columnWeight="1"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="물품 보관함" />
                </GridLayout>

                <TextView
                    android:id="@+id/tv_util"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="15dp"
                    android:text="수유실, 자전거보관소, 엘리베이터, 무인민원발급기, 유실물센터"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="10dp"
                android:background="#e2e2e2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="주소 및 전화번호"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="주소" />

                    <TextView
                        android:id="@+id/tv_addr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:text="부산광역시 부산진구 중앙대로 지하 730" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="전화" />

                    <TextView
                        android:id="@+id/tv_tel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:text="051-678-6119"
                        android:textColor="@color/lineColor_4" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="10dp"
        android:background="#e2e2e2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:orientation="horizontal">

            <ListView
                android:id="@+id/list_up_station"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1" />

            <ListView
                android:id="@+id/list_down_station"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1" />
        </GridLayout>

    </LinearLayout>
</LinearLayout>